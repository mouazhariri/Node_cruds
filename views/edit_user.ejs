<%- include('layout/header')%>
    <div class="container">
        <div class="row">
            <div class="col-lg-l2">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 mx-auto mt-4">
                            <div class="card shadow">
                                <div class="card-header bg-success ">
                                    <h5 class="text-light">Edit User (
                                        <%= users.name  %>)</h5>
                                </div>
                                <div class="card-body p-4">
                                    <form action="/update/<%= users._id  %>" method="post" id="add-form" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="name">Name</label>
                                            <input type="text" name="name" value="<%= users.name  %>  " class="form-control form-control-lg" placeholder="Enter Name" required/>
                                        </div>
                                        <div class="mb-3">
                                            <label for="email">Email</label>
                                            <input type="email" name="email" value="<%= users.email  %>" class=" form-control form-control-lg " placeholder="Enter Email " required/>
                                        </div>
                                        <div class="mb-3 ">
                                            <label for="phone ">Phone</label>
                                            <input type="tel " name="phone " value="<%=users.phone %>" class="form-control form-control-lg" placeholder="Enter Phone" required/>
                                        </div>
                                        <div class="mb-3">
                                            <label for="image" class="form-label">Select Image</label>
                                            <input type="file" name="image" class="form-control form-control-lg" />
                                            <img src="/<%=users.image  %>" width="100" class="img-thumbnail mt-1">
                                        </div>
                                        <input type="hidden" name="old_image" value="<%=users.image  %>">
                                        <div class="mb-3 d-grid">
                                            <input type="submit" name="submit" value="Edit User" class="btn btn-success btn-lg" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer')%>